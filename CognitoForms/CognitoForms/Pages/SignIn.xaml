<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="SaltyDog.CognitoForms.SignIn">
	<ContentPage.Content>
		<StackLayout Padding="32,16,32,16">
			<Entry x:Name="username" Placeholder="Username" Text="{Binding UserName}" Style="{StaticResource CognitoEntry}" />
			<Entry x:Name="password" Placeholder="Password" Text="{Binding Password}" Style="{StaticResource CognitoPasswordEntry}" />
			<Button Text="Sign In" Command="{Binding CmdSignIn}" Style="{StaticResource CognitoButton}" />
			<Button Text="Register" Command="{Binding CmdRegister}"  Style="{StaticResource CognitoRegistrationButton}" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>