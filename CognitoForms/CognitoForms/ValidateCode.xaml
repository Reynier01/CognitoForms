<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="SaltyDog.CognitoForms.ValidateCode">
	<ContentPage.Content>
		<StackLayout Padding="32,16,32,16">
			<Entry x:Name="email" Placeholder="Code" Text="{Binding Email}"  HorizontalOptions="FillAndExpand" Margin="0,0,0,12" />
			<Entry x:Name="code" Placeholder="Code" Text="{Binding Code}"  HorizontalOptions="FillAndExpand" Margin="0,0,0,12" />
			<Button Text="Sign In" HorizontalOptions="FillAndExpand" 
					BackgroundColor="#146FE6" TextColor="White" 
					FontSize="24" HeightRequest="76" Command="{Binding CmdValidate}" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>